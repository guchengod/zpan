<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="im.zhaojun.zfile.module.filter.mapper.FilterConfigMapper">
    <resultMap id="BaseResultMap" type="im.zhaojun.zfile.module.filter.model.entity.FilterConfig">
        <!--@mbg.generated-->
        <!--@Table filter_config-->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="storage_id" jdbcType="INTEGER" property="storageId"/>
        <result column="expression" jdbcType="VARCHAR" property="expression"/>
        <result column="mode" jdbcType="VARCHAR" property="mode"/>
        <result column="description" jdbcType="VARCHAR" property="description" />
    </resultMap>
    
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        <choose>
            <when test="_databaseId == 'postgresql'">
                "id", "storage_id", "expression", "mode", "description"
            </when>
            <otherwise>
                id, storage_id, expression, mode, description
            </otherwise>
        </choose>
    </sql>

    <sql id="Column_StorageId">
        <choose>
            <when test="_databaseId == 'postgresql'">"storage_id"</when>
            <otherwise>`storage_id`</otherwise>
        </choose>
    </sql>

    <sql id="Column_Mode">
        <choose>
            <when test="_databaseId == 'postgresql'">"mode"</when>
            <otherwise>`mode`</otherwise>
        </choose>
    </sql>

    <select id="findByStorageId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from filter_config
        where <include refid="Column_StorageId"/> = #{storageId,jdbcType=INTEGER}
    </select>

    <delete id="deleteByStorageId">
        delete from filter_config
        where <include refid="Column_StorageId"/> = #{storageId,jdbcType=INTEGER}
    </delete>

    <select id="findByStorageIdAndInaccessible" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from filter_config
        where <include refid="Column_StorageId"/> = #{storageId,jdbcType=INTEGER}
        and <include refid="Column_Mode"/> = 'inaccessible'
    </select>

    <select id="findByStorageIdAndDisableDownload" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from filter_config
        where <include refid="Column_StorageId"/> = #{storageId,jdbcType=INTEGER}
        and <include refid="Column_Mode"/> = 'disable_download'
    </select>
</mapper>